.wrap {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  padding-bottom: 150rpx;
}

.wrap .avatar {
  height: 750rpx;
}

.wrap .avatar image {
  width: 100%;
  height: 100%;
}

.wrap .result {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 20rpx;
  padding-left: 35%;
  line-height: 60rpx;
}

.wrap .btn {
  position: absolute;
  bottom: 50rpx;
  width: 600rpx;
  left: 10%;
}